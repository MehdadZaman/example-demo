<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MultiLoginPage">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id = "@+id/MultiLogInPageTitle"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="NutriLine"
            android:textSize="45sp"
            android:background="#007600"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/loginAsUserButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MultiLogInPageTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:onClick="userLogInClick"
            android:text="Log in As User"
            android:background="@drawable/rounded_corner_button"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/loginAsNutritionistButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginAsUserButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:onClick="nutritionistlogInClick"
            android:text="Log in As Nutritionist"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_corner_button"/>
    </RelativeLayout>

</ScrollView>